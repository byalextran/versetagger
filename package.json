{
  "name": "versetagger",
  "version": "0.1.0",
  "description": "VerseTagger is a TypeScript library that automatically detects scripture references on a webpage and provides interactive bible.com previews via hover modals.",
  "main": "dist/versetagger.js",
  "module": "dist/versetagger.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node build.js",
    "dev": "node build.js --dev",
    "watch": "node build.js --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch"
  },
  "keywords": [
    "bible",
    "scripture",
    "verse",
    "youversion",
    "modal",
    "bible.com"
  ],
  "author": "Alex Tran",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "dotenv": "^17.2.3",
    "esbuild": "^0.20.0",
    "jsdom": "^27.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  }
}
