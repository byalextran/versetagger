{
  "name": "versetagger",
  "version": "0.1.0",
  "description": "Pure TypeScript library that scans webpages for scripture references and displays verse content in elegant, customizable modals",
  "main": "dist/versetagger.js",
  "module": "dist/versetagger.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "themes"
  ],
  "scripts": {
    "build": "node build.js",
    "dev": "node build.js --dev",
    "watch": "node build.js --watch",
    "type-check": "tsc --noEmit",
    "update-translations": "tsx update-translations.ts",
    "worker:dev": "wrangler dev",
    "worker:deploy": "wrangler deploy",
    "worker:tail": "wrangler tail"
  },
  "keywords": [
    "bible",
    "scripture",
    "verse",
    "youversion",
    "reference",
    "tooltip",
    "modal"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "dotenv": "^17.2.3",
    "esbuild": "^0.20.0",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0"
  }
}
